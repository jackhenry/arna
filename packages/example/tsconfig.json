{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "module": "ESNEXT",
        "target": "ESNEXT",
        "useDefineForClassFields": true,
        "baseUrl": ".",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        "src/lib/*.ts",
        "src/lib/*.svelte",
        "src/assets/*",
        "tailwind.config.ts"
    ],
    //"exclude": [
    //    "vite.config.ts",
    //    "tailwind.config.ts",
    //    "postcss.config.ts",
    //],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../renderer"
        },
        {
            "path": "./tsconfig.node.json",
        }
    ]
}